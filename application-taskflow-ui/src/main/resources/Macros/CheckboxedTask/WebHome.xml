    <property>
      <code>/*!
#set ($l10nKeys = [
  'checktask.macro.hint',
  'checktask.macro.progress',
  'checktask.macro.success1',
  'checktask.macro.success2',
  'checktask.macro.error'
])
#set ($l10n = {})
#foreach ($key in $l10nKeys)
  #set ($discard = $l10n.put($key, $services.localization.render($key)))
#end
#[[*/
// Start JavaScript-only code.
(function(l10n) {
  "use strict";
  //Ajax function: update task objects through page Task Updater.
  require(['jquery', 'xwiki-meta'], function ($, xm) {
    if ($('#tasksLiveData').length == 0) {
      new XWiki.widgets.Notification(l10n['checktask.macro.hint'], 'info');
      var checkboxes = $('input[name="checktask"]');

      for (var i = 0; i &lt; checkboxes.length; i++) {
        // Enable task checkboxes.
        checkboxes[i].removeAttribute('disabled');
        // Add a change event listener.
        checkboxes[i].addEventListener('change', function() {
          updateTask(this.dataset.page, this.value, this.checked)
        });
      }
    }

    function updateTask(page,task,checked) {
      var url = new XWiki.Document('TaskUpdater','Macros.CheckboxedTask.Code').getURL('get');
      var urlParams = {'xpage': 'plain', 'outputSyntax': 'plain', 'page': page, 'task': task, 'checked': checked };
      var notification = new XWiki.widgets.Notification(l10n['checktask.macro.progress'], 'inprogress');
      $.post(url, urlParams, function(response, status, xhr) {
        notification.replace(new XWiki.widgets.Notification(l10n['checktask.macro.success1'] + '&lt;b&gt;' + response.task + '&lt;/b&gt; &lt;i&gt;' + response.result + '&lt;/i&gt; ' + l10n['checktask.macro.success1'],'done'));
        if (status == 'error' ) {
          notification.replace(new XWiki.widgets.Notification(l10n['checktask.macro.error'] + ': ' + xhr.status + ' ' + xhr.statusText, 'error'));
        }
      });
    }

    // Update the checked status of the reminderTimes checkboxes in the Edit macro window with values from the xObject.
    $(document).on('shown.bs.modal', '.modal.macro-editor-modal', function () {
      const modal = $(this);
      const checktaskMacro = modal.find('.macro-editor[data-macroid="checktask/xwiki/2.1"]');

      if (checktaskMacro.length) {
        var serviceURL = new XWiki.Document('MacroService', 'Macros.CheckboxedTask.Code').getURL('get', 'outputSyntax=plain');
        const observer = new MutationObserver((mutations, obs) =&gt; {
          const taskRidInput = checktaskMacro.find('input[name="rid"]');
          if (taskRidInput.length) {
            const taskRid = taskRidInput.val();
            $.post({
              url : serviceURL,
              data: {
                'taskRid': taskRid,
                'taskDoc': xm.document
              },
            }).done(function(data) {
              var reminderTimes = data.reminderTimes.split(',');
              // Uncheck all reminderTimes checkboxes first
              checktaskMacro.find('input[name="reminderTimes"][type="checkbox"]').prop('checked', false);

              // Check only those whose value is in the reminderTimes array
              reminderTimes.forEach(function (value) {
                checktaskMacro.find(`input[name="reminderTimes"][value="${value}"]`).prop('checked', true);
              });
            }).fail(function(data) {
              console.log(data);
            });
          };
        });

        observer.observe(checktaskMacro[0], {
          childList: true,
          subtree: true
        });
      }
    });
  }); //end jquery
}).apply(']]#', $jsontool.serialize([$l10n]));</code>
